@model CoverType

<form method="post" asp-action="confirmDelete" asp-route-id="@Model.Id">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kaftsoort @Model.Name echt verwijderen?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <input hidden asp-for="Id" />

        <button type="submit" class="btn btn-danger me-3">Verwijderen</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">
            Terug naar overzicht
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}